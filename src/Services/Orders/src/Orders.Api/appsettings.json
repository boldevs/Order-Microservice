{
  "AppOptions": {
    "Name": "Order Microservice"
  },
  "LogOptions": {
    "Level": "information",
    "LogTemplate": "{Timestamp:HH:mm:ss} [{Level:u4}] {Message:lj}{NewLine}{Exception}",
    "File": {
      "Enabled": false,
      "Path": "logs/logs.txt",
      "Interval": "day"
    }
  },
  "PostgresOptions": {
    "ConnectionString": "Server=localhost;Port=5432;Database=orders;User Id=postgres;Password=postgres;Include Error Detail=true"
  },
  "RabbitMqOptions": {
    "HostName": "localhost",
    "ExchangeName": "order",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672
  },
  "EasyCaching": {
    "Redis": {
      "Enable": true,
      "DBConfig": {
        "Endpoints": [
          {
            "Host": "localhost",
            "Port": 6379
          }
        ],
        "Password": "",
        "Database": 0,
        "AllowAdmin": true
      }
    }
  },
  "AllowedHosts": "*"
}
